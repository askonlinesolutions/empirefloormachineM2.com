<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">

    <update handle="default_head_blocks"/>

    <body>
        <!-- Inline scripts -->
        <referenceContainer name="before.body.end">
            <block class="Magento\Translation\Block\Js" name="translate"
                   template="Magento_Translation::translate.phtml"/>
            <block class="Magento\Framework\View\Element\Js\Cookie" name="js_cookies"
                   template="Magento_Theme::js/cookie.phtml"/>
            <block class="Magento\Theme\Block\Html\Notices" name="global_notices" template="html/notices.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="theme.js" before="-"
                   template="Magento_Theme::jsconfigurator.phtml"/>
        </referenceContainer>
        <!-- Inline scripts END -->

        <!-- Header. RD-Navbar -->
        <referenceContainer name="header.container">
            <container name="rd.navbar-wrap" htmlTag="div" htmlClass="rd-navbar">
                <container name="rd.navbar" htmlTag="div" htmlClass="rd-navbar-panel"/>
            </container>
        </referenceContainer>

        <referenceBlock name="skip_to_content" remove="true"/>
        <!-- Header. RD-Navbar END -->

        <!-- Navbar Collapse -->
        <block class="Magento\Framework\View\Element\Template" name="navbar.collapse"
               template="Magento_Theme::rd-navbar-collapse.phtml"/>
        <move element="navbar.collapse" destination="sm.header.customer.menu.wrap" before="-"/>
        <!-- Navbar Collapse End -->

        <!-- Header Panel -->
        <referenceContainer name="header.panel" htmlClass="panel page-header__panel">
            <container name="header.panel.grid-container" htmlClass="container" htmlTag="div" before="-">
                <container name="header.panel.grid-container.wrap" htmlClass="header-top-wrap" htmlTag="div" before="-">
                    <container name="header.switchers" htmlClass="header-switchers" htmlTag="div" before="-"/>
                    <block type="cms/block" class="Magento\Cms\Block\Block" name="header_info">
                        <arguments>
                            <argument name="block_id" xsi:type="string">header_info</argument>
                        </arguments>
                    </block>
                    <block type="cms/block" class="Magento\Cms\Block\Block" name="list_icon">
                        <arguments>
                            <argument name="block_id" xsi:type="string">list_icon</argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </referenceContainer>
        <!-- Header Panel END -->

        <!-- Header Content -->
        <referenceContainer name="header-wrapper" htmlClass="page-header__content">


            <container name="header-wrapper.grid-container" htmlClass="container" htmlTag="div" before="-">
                <container name="header-wrapper.grid-container.wrap" htmlClass="container-top-wrap" htmlTag="div"/>
            </container>

        </referenceContainer>
        <!-- Header Content END -->

        <!-- Navbar Collapse -->
        <container name="sm.header.customer.menu.wrap" htmlClass="sm-header_customer-menu-container" htmlTag="div"
                   after="-">
            <container name="sm.header.cutomer.menu" htmlClass="sm-header_customer-menu" htmlTag="div">
                <block class="Magento\Theme\Block\Html\Header" name="header_mobile" as="header_mobile" before="-">
                    <arguments>
                        <argument name="show_part" xsi:type="string">welcome</argument>
                    </arguments>
                </block>
                <block class="Magento\Store\Block\Switcher" name="store_language_mobile" as="store_language"
                       template="switch/languages_mobile.phtml" before="currency_mobile"/>
                <block class="Magento\Directory\Block\Currency" name="currency_mobile" before="store_language"
                       template="currency_mobile.phtml" after="-"/>
            </container>
        </container>

        <move element="top.links" destination="sm.header.cutomer.menu" after="header_mobile"/>
        <!-- Navbar Collapse End -->

        <referenceBlock name="navigation.sections" remove="true"/>

        <move element="logo" destination="header-wrapper.grid-container.wrap" before="-"/>
        <move element="header.panel" destination="rd.navbar" before="-"/>
        <move element="header-wrapper" destination="rd.navbar" after="header.panel"/>
        <remove element="header" destination="header.panel.grid-container.wrap"/> <!-- Welcome message -->
        <move element="store_language" destination="header.switchers" before="-"/>
        <move element="currency" destination="header.switchers" after="store_language"/>
        <move element="catalog.topnav" destination="header-wrapper.grid-container.wrap" after="logo"/>
        <move element="top.search" destination="header-wrapper.grid-container.wrap" after="catalog.topnav"/>
        <move element="minicart" destination="header-wrapper.grid-container.wrap"/>
        <move element="sm.header.customer.menu.wrap" destination="header-wrapper.grid-container.wrap"
              after="top.search"/> <!-- Top links -->
        <move element="catalog.compare.link" destination="top.links" after="wish-list-link"/>
        <move element="wish-list-link" destination="header-wrapper.grid-container.wrap" before="minicart"/>

        <!-- Logo -->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">104</argument>
                <argument name="logo_img_height" xsi:type="number">80</argument>
            </arguments>
        </referenceBlock>
        <!-- Logo END -->

        <!-- Page messages -->
        <referenceContainer name="page.messages" htmlClass="page-messages messages">
            <container name="page.messages.grid-container" htmlClass="container" htmlTag="div" before="-"/>
        </referenceContainer>

        <move element="ajax.message.placeholder" destination="page.messages.grid-container"/>
        <move element="messages" destination="page.messages.grid-container"/>
        <!-- Page messages END -->

        <!-- Footer -->
        <referenceContainer name="footer" htmlClass="page-footer" htmlTag="footer" >
            <container name="footer.grid-container" htmlClass="container content footer" htmlTag="div" after="-">
                <container name="footer.grid-row" htmlClass="row" htmlTag="div">
                    <container name="footer.grid-col1" htmlClass="col-md-3" htmlTag="div">

                        <block type="cms/block" class="Magento\Cms\Block\Block" name="footer_col_1">
                            <arguments>
                                <argument name="block_id" xsi:type="string">footer_col_4</argument>
                            </arguments>
                        </block>
                    </container>
                    <container name="footer.grid-col2" htmlClass="col-md-3" htmlTag="div">
                        <container name="footer.grid-col1.wrapper" htmlClass="footer-col" htmlTag="div">

                                <block class="Magento\Framework\View\Element\Template" name="footer.col.title.1"
                                       template="Magento_Theme::html/footer_col_title_2.phtml" before="-"/>
                                <container name="footer_col_content_2" htmlClass="footer-col-content" htmlTag="div">
                                    <block type="cms/block" class="Magento\Cms\Block\Block" name="footer_col_2"
                                           before="-">
                                        <arguments>
                                            <argument name="block_id" xsi:type="string">footer_col_1</argument>
                                        </arguments>
                                    </block>
                                </container>

                        </container>
                    </container>
                    <container name="footer.grid-col3" htmlClass="col-md-3" htmlTag="div">
                        <block type="cms/block" class="Magento\Cms\Block\Block" name="footer_col_3" before="-">
                            <arguments>
                                <argument name="block_id" xsi:type="string">footer_col_2</argument>
                            </arguments>
                        </block>
                    </container>
                    <container name="footer.grid-col4" htmlClass="col-md-3" htmlTag="div">
                        <block type="cms/block" class="Magento\Cms\Block\Block" name="footer_col_4" before="-">
                            <arguments>
                                <argument name="block_id" xsi:type="string">footer_col_3</argument>
                            </arguments>
                        </block>
                    </container>
                    <!--<container name="footer.grid-col4" htmlClass="col-md-3" htmlTag="div"/>-->
                </container>
            </container>
            <container name="footer.panel" htmlClass="footer-panel" htmlTag="div" after="-">
                <container name="footer.panel.container" htmlClass="container" htmlTag="div">
                    <block class="Magento\Theme\Block\Html\Header\Logo" name="logo-footer" before="-">
                        <arguments>
                            <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                            <argument name="logo_img_width" xsi:type="number">65</argument>
                            <argument name="logo_img_height" xsi:type="number">50</argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </referenceContainer>

        <move element="footer" destination="page.wrapper" after="before.body.end"/>
        <move element="footer_links" destination="footer_col_content_2" after="-"/>
        <move element="store_switcher" destination="footer.grid-container" before="copyright"/>
        <move element="theme_options.social_links.footer" destination="footer.panel.container" after="logo-footer"/>
        <move element="copyright" destination="footer.panel.container" after="-"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <!-- Footer END -->
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="logo-footer" remove="true"/>
        <!-- To Top Button -->
        <referenceContainer name="page.wrapper">
            <block class="Magento\Framework\View\Element\Template" name="to.top.button" after="-"
                   template="Magento_Theme::text.phtml">
                <arguments>
                    <argument translate="true" name="text" xsi:type="string">To Top</argument>
                    <argument name="tag" xsi:type="string">div</argument>
                    <argument name="css_class" xsi:type="string">scrollToTop</argument>
                </arguments>
            </block>
        </referenceContainer>

        <!-- Page Preloader -->
        <referenceContainer name="page.wrapper">
            <block class="Magento\Framework\View\Element\Template" name="page.preloader"
                   template="Magento_Theme::page_preloader.phtml" before="-"/>
        </referenceContainer>

    </body>
</page>
